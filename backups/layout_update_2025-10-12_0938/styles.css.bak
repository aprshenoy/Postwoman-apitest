/* ================== ANIMATION ENHANCEMENTS ================== */
@keyframes slideInContext {
    from {
        opacity: 0;
        transform: translateY(-10px) scale(0.95);
    }
    to {
        opacity: 1;
        transform: translateY(0) scale(1);

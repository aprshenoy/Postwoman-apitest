/* Modern Table Input Design */
/* Proper Tabular Design */
.key-value-container {
    border: 1px solid var(--border-color);
    border-radius: var(--radius-md);
    overflow: hidden;
    background: var(--bg-primary);
}

.key-value-table {
    width: 100%;
    border-collapse: collapse;
}

.key-value-table thead {
    background: var(--bg-tertiary);
}

.key-value-table th {
    padding: 8px 12px;
    font-size: 12px;
    font-weight: 600;
    color: var(--text-secondary);
    text-align: left;
    border-bottom: 1px solid var(--border-color);
    border-right: 1px solid var(--border-color);
}

.key-value-table th:last-child {
    border-right: none;
    text-align: center;
    width: 60px;
}

.key-value-table tbody tr {
    border-bottom: 1px solid var(--border-color);
    transition: background 0.2s;
}

.key-value-table tbody tr:hover {
    background: rgba(14, 165, 233, 0.05);
}

.key-value-table tbody tr:last-child {
    border-bottom: none;
}

.key-value-table td {
    padding: 0;
    border-right: 1px solid var(--border-color);
}

.key-value-table td:last-child {
    border-right: none;
    text-align: center;
    width: 60px;
}

.key-value-table input {
    width: 100%;
    border: none;
    padding: 10px 12px;
    background: transparent;
    color: var(--text-primary);
    font-size: 13px;
    outline: none;
}

.key-value-table input:focus {
    background: var(--bg-secondary);
}

.key-value-table .remove-btn {
    background: transparent;
    border: none;
    color: var(--text-tertiary);
    cursor: pointer;
    padding: 8px;
    font-size: 16px;
    width: 100%;
    height: 100%;
    transition: all 0.2s;
}

.key-value-table .remove-btn:hover {
    background: var(--error-color);
    color: white;
}

.key-value-header {
    display: grid;
    grid-template-columns: 1fr 1fr 60px;
    background: var(--bg-tertiary);
    border-bottom: 1px solid var(--border-color);
    font-size: 12px;
    font-weight: 600;
    color: var(--text-secondary);
}

.key-value-header > div {
    padding: 8px 12px;
    border-right: 1px solid var(--border-color);
}

.key-value-header > div:last-child {
    border-right: none;
    text-align: center;
}

.key-value-pair {
    display: grid;
    grid-template-columns: 1fr 1fr 60px;
    border-bottom: 1px solid var(--border-color);
    transition: background 0.2s;
}

.key-value-pair:last-child {
    border-bottom: none;
}

.key-value-pair:hover {
    background: rgba(14, 165, 233, 0.05);
}

.key-value-pair input {
    border: none;
    padding: 10px 12px;
    background: transparent;
    color: var(--text-primary);
    font-size: 13px;
    border-right: 1px solid var(--border-color);
    transition: background 0.2s;
}

.key-value-pair input:focus {
    background: var(--bg-secondary);
    outline: none;
}

.key-value-pair input:last-of-type {
    border-right: 1px solid var(--border-color);
}

.key-value-pair .remove-btn {
    border: none;
    background: transparent;
    color: var(--text-tertiary);
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 16px;
    transition: all 0.2s;
}

.key-value-pair .remove-btn:hover {
    background: var(--error-color);
    color: white;
}

.remove-btn {
  background-color: var(--error-color);
  color: var(--text-inverse);
  border: none;
  padding: var(--spacing-xs) var(--spacing-sm);
  border-radius: var(--radius-sm);
  cursor: pointer;
  font-size: 0.75rem;
  transition: all var(--transition-fast);
}

.remove-btn:hover {
  background-color: #b91c1c;
}

/* Auth fields */
.auth-content {
  margin-top: var(--spacing-md);
}

.auth-fields {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-md);
}

.auth-fields label {
  display: block;
  margin-bottom: var(--spacing-xs);
  font-size: 0.875rem;
  font-weight: 500;
  color: var(--text-secondary);
}

.auth-fields input,
.auth-fields select {
  width: 100%;
  padding: var(--spacing-sm);
  border: 1px solid var(--border-color);
  border-radius: var(--radius-md);
  background-color: var(--bg-primary);
  color: var(--text-primary);
  font-size: 0.875rem;
}

/* Body fields */
.body-content {
  margin-top: var(--spacing-md);
}

.body-fields textarea {
    width: 100%;
    padding: 8px; /* Reduced padding */
    border: 1px solid var(--border-color);
    border-radius: 4px;
    background-color: var(--bg-primary);
    color: var(--text-primary) !important; /* Force visible text */
    font-size: 12px; /* Reduced from 13px */
    font-family: var(--font-mono);
    resize: vertical;
    min-height: 80px; /* Reduced from 120px */
}

.body-fields textarea:focus {
  outline: none;
  border-color: var(--border-focus);
}

.body-fields textarea.valid {
  border-color: var(--success-color);
}

.body-fields textarea.invalid {
  border-color: var(--error-color);
}

.btn-format {
  margin-top: var(--spacing-sm);
  background-color: var(--info-color);
  color: var(--text-inverse);
  border: none;
  padding: var(--spacing-xs) var(--spacing-sm);
  border-radius: var(--radius-sm);
  cursor: pointer;
  font-size: 0.75rem;
}

/* cURL section */
.curl-section {
  background-color: var(--bg-secondary);
  border: 1px solid var(--border-color);
  border-radius: var(--radius-lg);
  padding: var(--spacing-lg);
  margin-bottom: var(--spacing-lg);
  display: none;
}

.curl-section.visible {
  display: block;
}

.curl-code {
  background-color: var(--bg-primary);
  border: 1px solid var(--border-color);
  border-radius: var(--radius-md);
  padding: var(--spacing-md);
  font-family: var(--font-mono);
  font-size: 0.875rem;
  color: var(--text-primary);
  white-space: pre-wrap;
  word-wrap: break-word;
  margin-top: var(--spacing-md);
  max-height: 200px;
  overflow-y: auto;
}

.btn-copy {
  background-color: var(--success-color);
  color: var(--text-inverse);
  border: none;
  padding: var(--spacing-xs) var(--spacing-sm);
  border-radius: var(--radius-sm);
  cursor: pointer;
  font-size: 0.75rem;
}

/* Response section */
.response-section {
  background-color: var(--bg-secondary);
  border: 1px solid var(--border-color);
  border-radius: var(--radius-lg);
  padding: var(--spacing-lg);
}

.response-container {
  margin-top: var(--spacing-md);
}

.response-placeholder {
  text-align: center;
  padding: var(--spacing-2xl);
  color: var(--text-tertiary);
}

.response-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: var(--spacing-md);
  flex-wrap: wrap;
  gap: var(--spacing-md);
}

.response-status {
  display: flex;
  align-items: center;
  gap: var(--spacing-md);
  flex-wrap: wrap;
}

.response-actions {
  display: flex;
  align-items: center;
  gap: var(--spacing-sm);
}

.response-meta {
  font-size: 0.875rem;
  color: var(--text-secondary);
}

.response-headers {
  margin-bottom: var(--spacing-md);
}

.response-headers h4 {
  margin-bottom: var(--spacing-sm);
  color: var(--text-primary);
}

.headers-list {
  background-color: var(--bg-primary);
  border: 1px solid var(--border-color);
  border-radius: var(--radius-md);
  padding: var(--spacing-md);
  max-height: 200px;
  overflow-y: auto;
}

.header-item {
  display: flex;
  gap: var(--spacing-sm);
  margin-bottom: var(--spacing-xs);
}

.header-key {
  font-weight: 500;
  color: var(--text-primary);
  min-width: 120px;
}

.header-value {
  color: var(--text-secondary);
  word-break: break-all;
}

.response-body-section h4 {
  margin-bottom: var(--spacing-sm);
  color: var(--text-primary);
}

.response-body {
  background-color: var(--bg-primary);
  border: 1px solid var(--border-color);
  border-radius: var(--radius-md);
  padding: var(--spacing-md);
  font-family: var(--font-mono);
  font-size: 0.875rem;
  color: var(--text-primary);
  white-space: pre-wrap;
  word-wrap: break-word;
  max-height: 400px;
  overflow-y: auto;
}

.error-body {
  background-color: #fef2f2;
  color: var(--error-color);
  border-color: #fecaca;
}

/* Status badges */
.status-badge {
  padding: var(--spacing-xs) var(--spacing-sm);
  border-radius: var(--radius-sm);
  font-size: 0.75rem;
  font-weight: 600;
  text-transform: uppercase;
}

.status-200 {
  background-color: var(--status-200);
  color: var(--text-inverse);
}

.status-300 {
  background-color: var(--status-300);
  color: var(--text-inverse);
}

.status-400 {
  background-color: var(--status-400);
  color: var(--text-inverse);
}

.status-500 {
  background-color: var(--status-500);
  color: var(--text-inverse);
}

.status-unknown {
  background-color: var(--text-tertiary);
  color: var(--text-inverse);
}

/* Method badges */
.method-badge {
  padding: var(--spacing-xs) var(--spacing-sm);
  border-radius: var(--radius-sm);
  font-size: 0.75rem;
  font-weight: 600;
  text-transform: uppercase;
}

.method-get {
  background-color: var(--method-get);
  color: var(--text-inverse);
}

.method-post {
  background-color: var(--method-post);
  color: var(--text-inverse);
}

.method-put {
  background-color: var(--method-put);
  color: var(--text-inverse);
}

.method-patch {
  background-color: var(--method-patch);
  color: var(--text-inverse);
}

.method-delete {
  background-color: var(--method-delete);
  color: var(--text-inverse);
}

.method-head {
  background-color: var(--method-head);
  color: var(--text-inverse);
}

.method-options {
  background-color: var(--method-options);
  color: var(--text-inverse);
}

/* Collections */
.collections-container {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
  gap: var(--spacing-lg);
}

.collection-card {
  background-color: var(--bg-secondary);
  border: 1px solid var(--border-color);
  border-radius: var(--radius-lg);
  padding: var(--spacing-lg);
  cursor: pointer;
  transition: all var(--transition-fast);
}

.collection-card:hover {
  border-color: var(--border-hover);
  box-shadow: var(--shadow-md);
}

.collection-header {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  margin-bottom: var(--spacing-md);
}

.collection-title {
  font-size: 1.1rem;
  font-weight: 600;
  color: var(--text-primary);
  margin: 0;
}

.collection-menu {
  position: relative;
}

.collection-menu-btn {
  background: none;
  border: none;
  padding: var(--spacing-xs);
  cursor: pointer;
  color: var(--text-secondary);
  border-radius: var(--radius-sm);
  font-size: 1.2rem;
}

.collection-menu-btn:hover {
  background-color: var(--bg-tertiary);
  color: var(--text-primary);
}

.collection-info {
  color: var(--text-secondary);
  font-size: 0.875rem;
  margin-bottom: var(--spacing-md);
}

.collection-stats {
  display: flex;
  align-items: center;
  gap: var(--spacing-md);
  font-size: 0.75rem;
  color: var(--text-tertiary);
  margin-bottom: var(--spacing-md);
}

.collection-methods {
  display: flex;
  flex-wrap: wrap;
  gap: var(--spacing-xs);
}

.method-count {
  padding: 0.125rem 0.375rem;
  border-radius: var(--radius-sm);
  font-size: 0.625rem;
  font-weight: 500;
  text-transform: uppercase;
}

/* History */
.history-container {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-md);
}

.history-item {
  background-color: var(--bg-secondary);
  border: 1px solid var(--border-color);
  border-radius: var(--radius-lg);
  padding: var(--spacing-md);
  cursor: pointer;
  transition: all var(--transition-fast);
}

.history-item:hover {
  border-color: var(--border-hover);
  box-shadow: var(--shadow-sm);
}

.history-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: var(--spacing-sm);
}

.history-request-info {
  display: flex;
  align-items: center;
  gap: var(--spacing-md);
}

.history-method {
  padding: var(--spacing-xs) var(--spacing-sm);
  border-radius: var(--radius-sm);
  font-size: 0.75rem;
  font-weight: 600;
  text-transform: uppercase;
}

.history-status {
  padding: var(--spacing-xs) var(--spacing-sm);
  border-radius: var(--radius-sm);
  font-size: 0.75rem;
  font-weight: 600;
}

.history-duration {
  font-size: 0.75rem;
  color: var(--text-secondary);
}

.history-meta {
  display: flex;
  align-items: center;
  gap: var(--spacing-md);
}

.history-time {
  font-size: 0.75rem;
  color: var(--text-tertiary);
}

.history-actions {
  display: flex;
  align-items: center;
  gap: var(--spacing-xs);
}

.history-url {
  font-family: var(--font-mono);
  font-size: 0.875rem;
  color: var(--text-secondary);
  margin-bottom: var(--spacing-sm);
  word-break: break-all;
}

.history-details {
  display: flex;
  align-items: center;
  gap: var(--spacing-md);
  font-size: 0.75rem;
  color: var(--text-tertiary);
}

/* Environments */
.environments-container {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
  gap: var(--spacing-lg);
}

.environment-card {
  background-color: var(--bg-secondary);
  border: 1px solid var(--border-color);
  border-radius: var(--radius-lg);
  padding: var(--spacing-lg);
  transition: all var(--transition-fast);
}

.environment-card.active {
  border-color: var(--primary-color);
  box-shadow: 0 0 0 3px rgba(14, 165, 233, 0.1);
}

.environment-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: var(--spacing-md);
}

.environment-name {
  font-size: 1.1rem;
  font-weight: 600;
  color: var(--text-primary);
  margin: 0;
}

.environment-badge {
  padding: var(--spacing-xs) var(--spacing-sm);
  border-radius: var(--radius-sm);
  font-size: 0.75rem;
  font-weight: 600;
  text-transform: uppercase;
}

.badge-development {
  background-color: var(--info-color);
  color: var(--text-inverse);
}

.badge-staging {
  background-color: var(--warning-color);
  color: var(--text-inverse);
}

.badge-production {
  background-color: var(--error-color);
  color: var(--text-inverse);
}

.environment-variables {
  color: var(--text-secondary);
  font-size: 0.875rem;
  margin-bottom: var(--spacing-md);
}

.environment-preview {
  margin-bottom: var(--spacing-md);
}

.env-preview-item {
  display: flex;
  align-items: center;
  gap: var(--spacing-sm);
  font-size: 0.75rem;
  margin-bottom: var(--spacing-xs);
}

.env-preview-key {
  font-weight: 500;
  color: var(--text-primary);
  min-width: 80px;
}

.env-preview-value {
  color: var(--text-secondary);
  font-family: var(--font-mono);
  word-break: break-all;
}

.env-preview-more {
  font-size: 0.75rem;
  color: var(--text-tertiary);
  font-style: italic;
}

.environment-actions {
  display: flex;
  flex-wrap: wrap;
  gap: var(--spacing-xs);
}

/* Teams */
.teams-container {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-lg);
}

.teams-empty-state {
  text-align: center;
  padding: var(--spacing-2xl);
}

.feature-card {
  background-color: var(--bg-secondary);
  border: 1px solid var(--border-color);
  border-radius: var(--radius-lg);
  padding: var(--spacing-xl);
  max-width: 600px;
  margin: 0 auto;
}

.feature-card h3 {
  font-size: 1.5rem;
  margin-bottom: var(--spacing-md);
  color: var(--text-primary);
}

.feature-card p {
  color: var(--text-secondary);
  margin-bottom: var(--spacing-lg);
}

.features-list ul {
  text-align: left;
  color: var(--text-secondary);
  margin-bottom: var(--spacing-lg);
}

.features-list li {
  margin-bottom: var(--spacing-sm);
}

.team-actions {
  display: flex;
  flex-wrap: wrap;
  gap: var(--spacing-md);
  justify-content: center;
}

.coming-soon-notice {
  font-size: 0.875rem;
}

/* Teams grid */
.teams-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: var(--spacing-lg);
}

.teams-status {
  display: flex;
  align-items: center;
  gap: var(--spacing-sm);
}

.connection-status {
  padding: var(--spacing-xs) var(--spacing-sm);
  border-radius: var(--radius-sm);
  font-size: 0.75rem;
  font-weight: 600;
}

.connection-status.online {
  background-color: var(--success-color);
  color: var(--text-inverse);
}

.connection-status.offline {
  background-color: var(--error-color);
  color: var(--text-inverse);
}

.teams-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
  gap: var(--spacing-lg);
}

.team-card {
  background-color: var(--bg-secondary);
  border: 1px solid var(--border-color);
  border-radius: var(--radius-lg);
  padding: var(--spacing-lg);
  cursor: pointer;
  transition: all var(--transition-fast);
}

.team-card:hover {
  border-color: var(--border-hover);
  box-shadow: var(--shadow-md);
}

.team-card.active {
  border-color: var(--primary-color);
  box-shadow: 0 0 0 3px rgba(14, 165, 233, 0.1);
}

.team-header {
  display: flex;
  align-items: flex-start;
  gap: var(--spacing-md);
  margin-bottom: var(--spacing-md);
}

.team-avatar {
  font-size: 1.5rem;
  width: 48px;
  height: 48px;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: var(--bg-tertiary);
  border-radius: var(--radius-lg);
}

.team-info {
  flex: 1;
}

.team-name {
  font-size: 1.1rem;
  font-weight: 600;
  color: var(--text-primary);
  margin: 0;
  margin-bottom: var(--spacing-xs);
}

.team-description {
  color: var(--text-secondary);
  font-size: 0.875rem;
  margin: 0;
}

.team-menu {
  position: relative;
}

.team-menu-btn {
  background: none;
  border: none;
  padding: var(--spacing-xs);
  cursor: pointer;
  color: var(--text-secondary);
  border-radius: var(--radius-sm);
  font-size: 1.2rem;
}

.team-menu-btn:hover {
  background-color: var(--bg-tertiary);
  color: var(--text-primary);
}

.team-stats {
  display: flex;
  justify-content: space-between;
  margin-bottom: var(--spacing-md);
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: var(--spacing-xs);
}

.stat-icon {
  font-size: 1rem;
}

.stat-value {
  font-weight: 600;
  color: var(--text-primary);
}

.stat-label {
  font-size: 0.75rem;
  color: var(--text-secondary);
}

.team-members {
  margin-bottom: var(--spacing-md);
}

.members-preview {
  display: flex;
  align-items: center;
  gap: var(--spacing-xs);
}

.member-avatar {
  width: 24px;
  height: 24px;
  background-color: var(--primary-color);
  color: var(--text-inverse);
  border-radius: 50%;
  font-size: 0.625rem;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
}

.member-count {
  font-size: 0.75rem;
  color: var(--text-secondary);
}

.team-role {
  display: flex;
  justify-content: flex-end;
}

.role-badge {
  padding: var(--spacing-xs) var(--spacing-sm);
  border-radius: var(--radius-sm);
  font-size: 0.75rem;
  font-weight: 600;
  text-transform: capitalize;
}

.role-owner {
  background-color: var(--warning-color);
  color: var(--text-inverse);
}

.role-admin {
  background-color: var(--info-color);
  color: var(--text-inverse);
}

.role-member {
  background-color: var(--text-tertiary);
  color: var(--text-inverse);
}

/* Modals */
.modal {
  display: none;
  position: fixed;
  z-index: 1000;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background-color: var(--bg-overlay);
  overflow-y: auto;
}

.modal-content {
  background-color: var(--bg-primary);
  margin: 5% auto;
  border: 1px solid var(--border-color);
  border-radius: var(--radius-lg);
  width: 90%;
  max-width: 500px;
  box-shadow: var(--shadow-xl);
  animation: modalSlideIn 0.3s ease;
}

.modal-content.large {
  max-width: 800px;
}

@keyframes modalSlideIn {
  from {
    opacity: 0;
    transform: translateY(-50px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: var(--spacing-lg);
  border-bottom: 1px solid var(--border-color);
}

.modal-header h3 {
  margin: 0;
  color: var(--text-primary);
}

.close {
  background: none;
  border: none;
  font-size: 1.5rem;
  cursor: pointer;
  color: var(--text-secondary);
  padding: var(--spacing-xs);
  border-radius: var(--radius-sm);
}

.close:hover {
  background-color: var(--bg-tertiary);
  color: var(--text-primary);
}

.modal-body {
  padding: var(--spacing-lg);
}

.modal-footer {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  gap: var(--spacing-sm);
  padding: var(--spacing-lg);
  border-top: 1px solid var(--border-color);
}

/* Forms */
.form-group {
  margin-bottom: var(--spacing-md);
}

.form-group label {
  display: block;
  margin-bottom: var(--spacing-xs);
  font-size: 0.875rem;
  font-weight: 500;
  color: var(--text-primary);
}

.form-group input,
.form-group textarea,
.form-group select {
  width: 100%;
  padding: var(--spacing-sm);
  border: 1px solid var(--border-color);
  border-radius: var(--radius-md);
  background-color: var(--bg-primary);
  color: var(--text-primary);
  font-size: 0.875rem;
}

.form-group input:focus,
.form-group textarea:focus,
.form-group select:focus {
  outline: none;
  border-color: var(--border-focus);
  box-shadow: 0 0 0 3px rgba(14, 165, 233, 0.1);
}

.form-group textarea {
  resize: vertical;
  min-height: 80px;
}

/* Environment variables */
.env-variables-container {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-sm);
  max-height: 300px;
  overflow-y: auto;
}

.env-variable {
  display: flex;
  gap: var(--spacing-sm);
  align-items: center;
}

.env-key,
.env-value {
  flex: 1;
  padding: var(--spacing-sm);
  border: 1px solid var(--border-color);
  border-radius: var(--radius-md);
  background-color: var(--bg-primary);
  color: var(--text-primary);
  font-size: 0.875rem;
}

/* Context menu */
.context-menu {
  position: absolute;
  background-color: var(--bg-primary);
  border: 1px solid var(--border-color);
  border-radius: var(--radius-md);
  box-shadow: var(--shadow-lg);
  z-index: 1000;
  min-width: 180px;
  padding: var(--spacing-xs);
}

.context-menu-item {
  display: flex;
  align-items: center;
  gap: var(--spacing-sm);
  padding: var(--spacing-sm) var(--spacing-md);
  cursor: pointer;
  border-radius: var(--radius-sm);
  font-size: 0.875rem;
  color: var(--text-primary);
  transition: all var(--transition-fast);
}

.context-menu-item:hover {
  background-color: var(--bg-tertiary);
}

.context-menu-item.danger {
  color: var(--error-color);
}

.context-menu-item.danger:hover {
  background-color: #fef2f2;
}

.context-menu-separator {
  height: 1px;
  background-color: var(--border-color);
  margin: var(--spacing-xs) 0;
}

.menu-icon {
  font-size: 1rem;
  min-width: 20px;
}

/* Notifications */
.notification-container {
  position: fixed;
  top: 20px;
  right: 20px;
  z-index: 1050;
  display: flex;
  flex-direction: column;
  gap: var(--spacing-sm);
  max-width: 400px;
}

.notification {
  display: flex;
  align-items: flex-start;
  gap: var(--spacing-md);
  background-color: var(--bg-primary);
  border: 1px solid var(--border-color);
  border-radius: var(--radius-lg);
  padding: var(--spacing-md);
  box-shadow: var(--shadow-lg);
  transform: translateX(100%);
  opacity: 0;
  transition: all var(--transition-normal);
}

.notification.show {
  transform: translateX(0);
  opacity: 1;
}

.notification-success {
  border-left: 4px solid var(--success-color);
}

.notification-error {
  border-left: 4px solid var(--error-color);
}

.notification-warning {
  border-left: 4px solid var(--warning-color);
}

.notification-info {
  border-left: 4px solid var(--info-color);
}

.notification-icon {
  font-size: 1.2rem;
  margin-top: 0.125rem;
}

.notification-content {
  flex: 1;
}

.notification-title {
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: var(--spacing-xs);
}

.notification-message {
  font-size: 0.875rem;
  color: var(--text-secondary);
}

.notification-close {
  background: none;
  border: none;
  font-size: 1.2rem;
  cursor: pointer;
  color: var(--text-secondary);
  padding: 0;
  line-height: 1;
}

.notification-close:hover {
  color: var(--text-primary);
}

/* Loading states */
.loading-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: var(--bg-overlay);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 2000;
}

.loading-spinner {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: var(--spacing-md);
  background-color: var(--bg-primary);
  padding: var(--spacing-xl);
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow-xl);
}

.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: var(--spacing-md);
  padding: var(--spacing-xl);
  color: var(--text-secondary);
}

.spinner {
  width: 32px;
  height: 32px;
  border: 3px solid var(--border-color);
  border-top: 3px solid var(--primary-color);
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* Scrollbars */
::-webkit-scrollbar {
  width: 8px;
  height: 8px;
}

::-webkit-scrollbar-track {
  background: var(--bg-tertiary);
  border-radius: var(--radius-sm);
}

::-webkit-scrollbar-thumb {
  background: var(--text-tertiary);
  border-radius: var(--radius-sm);
}

::-webkit-scrollbar-thumb:hover {
  background: var(--text-secondary);
}

/* Responsive design */
@media (max-width: 768px) {
  .sidebar {
    width: 200px;
  }
  
  .nav-label {
    display: none;
  }
  
  .nav-item {
    justify-content: center;
  }
  
  .collections-container,
  .environments-container,
  .teams-grid {
    grid-template-columns: 1fr;
  }
  
  .request-line {
    flex-direction: column;
  }
  
  .method-select {
    width: 100%;
  }
  
  .section-header {
    flex-direction: column;
    align-items: flex-start;
  }
}

@media (max-width: 480px) {
  .app-header {
    padding: var(--spacing-sm);
  }
  
  .content-area {
    padding: var(--spacing-md);
  }
  
  .modal-content {
    margin: 10px;
    width: calc(100% - 20px);
  }
  
  .notification-container {
    left: 10px;
    right: 10px;
    max-width: none;
  }
  
  .team-stats {
    flex-direction: column;
    gap: var(--spacing-sm);
  }
  

/* PosterBoy CSS - Complete Styling */
:root {
  /* Light theme colors */
  --primary-color: #0ea5e9;
  --primary-hover: #0284c7;
  --secondary-color: #64748b;
  --success-color: #059669;
  --warning-color: #d97706;
  --error-color: #dc2626;
  --info-color: #2563eb;
  
  /* Background colors */
  --bg-primary: #ffffff;
  --bg-secondary: #f8fafc;
  --bg-tertiary: #f1f5f9;
  --bg-overlay: rgba(0, 0, 0, 0.5);
  
  /* Text colors */
  --text-primary: #1e293b;
  --text-secondary: #64748b;
  --text-tertiary: #94a3b8;
  --text-inverse: #ffffff;
  
  /* Border colors */
  --border-color: #e2e8f0;
  --border-hover: #cbd5e1;
  --border-focus: #0ea5e9;
  
  /* HTTP Method colors */
  --method-get: #059669;
  --method-post: #0ea5e9;
  --method-put: #d97706;
  --method-patch: #7c3aed;
  --method-delete: #dc2626;
  --method-head: #64748b;
  --method-options: #8b5cf6;
  
  /* Status code colors */
  --status-200: #059669;
  --status-300: #0ea5e9;
  --status-400: #d97706;
  --status-500: #dc2626;
  
  /* Spacing */
  --spacing-xs: 0.25rem;
  --spacing-sm: 0.5rem;
  --spacing-md: 1rem;
  --spacing-lg: 1.5rem;
  --spacing-xl: 2rem;
  --spacing-2xl: 3rem;
  
  /* Border radius */
  --radius-sm: 4px;
  --radius-md: 6px;
  --radius-lg: 8px;
  --radius-xl: 12px;
  
  /* Shadows */
  --shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
  --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
  --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
  --shadow-xl: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
  
  /* Typography */
  --font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
  --font-mono: "SF Mono", "Monaco", "Inconsolata", "Roboto Mono", "Droid Sans Mono", "Ubuntu Mono", monospace;
  
  /* Transitions */
  --transition-fast: 0.15s ease;
  --transition-normal: 0.3s ease;
  --transition-slow: 0.5s ease;
}

/* Dark theme */
[data-theme="dark"] {
  --bg-primary: #0f172a;
  --bg-secondary: #1e293b;
  --bg-tertiary: #334155;
  --bg-overlay: rgba(0, 0, 0, 0.7);
  
  --text-primary: #f8fafc;
  --text-secondary: #cbd5e1;
  --text-tertiary: #94a3b8;
  --text-inverse: #0f172a;
  
  --border-color: #475569;
  --border-hover: #64748b;
}

/* Base styles */
* {
  box-sizing: border-box;
  margin: 0;
  padding: 0;
}

html, body {
  height: 100%;
  font-family: var(--font-family);
  font-size: 14px;
  line-height: 1.5;
  color: var(--text-primary);
  background-color: var(--bg-primary);
  overflow: hidden;
}

.app-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
}

/* Header */
.app-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 8px 16px; /* Reduced from 16px 24px */
    background-color: var(--bg-secondary);
    border-bottom: 1px solid var(--border-color);
    min-height: 42px; /* Reduced from 60px (30% reduction) */
    flex-shrink: 0;
}

/* Adjust logo section sizing */
.logo-section {
    display: flex;
    align-items: center;
    gap: 8px; /* Reduced from 16px */
}

.logo {
    font-size: 1.2rem; /* Reduced from 1.5rem */
}

.logo-section h1 {
    font-size: 1rem; /* Reduced from 1.25rem */
    font-weight: 600;
    color: var(--primary-color);
}

.version {
    font-size: 0.7rem; /* Reduced from 0.75rem */
    color: var(--text-tertiary);
    background: var(--bg-tertiary);
    padding: 0.1rem 0.3rem; /* Reduced padding */
    border-radius: var(--radius-sm);
}

.header-controls {
  display: flex;
  align-items: center;
  gap: var(--spacing-md);
}

.header-btn {
  background: none;
  border: 1px solid var(--border-color);
  padding: var(--spacing-sm);
  border-radius: var(--radius-md);
  cursor: pointer;
  color: var(--text-secondary);
  transition: all var(--transition-fast);
}

.header-btn:hover {
  background-color: var(--bg-tertiary);
  border-color: var(--border-hover);
}

/* Main content */
.main-content {
    display: flex;
    flex: 1;
    overflow: hidden;
    transition: all 0.3s ease;
}

/* ================== CONDITIONAL SIDEBAR LAYOUT ================== */
/* Logo image styling */
.logo-image {
    width: 24px; /* Reduced from emoji size for compact header */
    height: 24px;
    object-fit: contain;
    border-radius: 4px; /* Slight rounding for modern look */
    transition: all 0.2s ease;
}

.logo-image:hover {
    transform: scale(1.05);
    filter: brightness(1.1);
}
/* Main content adjustments when sidebar is hidden */
.main-content.full-width .content-area {
    margin-left: 0;
    width: 100%;
}

/* Requests sidebar hidden state */
.requests-sidebar.hidden {
    display: none !important;
}

/* Smooth transition for layout changes */
.main-content {
    transition: all 0.3s ease;
}

.content-area {
    transition: all 0.3s ease;
}

.requests-sidebar {
    transition: all 0.3s ease;
}

/* ================== LAYOUT ADJUSTMENTS FOR DIFFERENT SECTIONS ================== */

/* When sidebar is hidden, give more space to content */
.main-content.full-width {
    overflow: hidden;
}

.main-content.full-width .content-area {
    width: calc(100% - 60px); /* Account for icon sidebar only */
    margin-left: 0;
}

/* Ensure collections, environments, teams get full width */
.main-content.full-width #collections,
.main-content.full-width #environments,
.main-content.full-width #teams {
    max-width: 100%;
    padding: 20px 40px; /* More padding for better use of space */
}

/* ================== RESPONSIVE IMPROVEMENTS ================== */

@media (max-width: 1024px) {
    .main-content.full-width .content-area {
        padding: 16px 24px;
    }
    
    .main-content.full-width #collections,
    .main-content.full-width #environments,
    .main-content.full-width #teams {
        padding: 16px 24px;
    }
}

@media (max-width: 768px) {
    .main-content.full-width .content-area {
        width: calc(100% - 50px); /* Account for smaller icon sidebar */
        padding: 12px 16px;
    }
    
    .main-content.full-width #collections,
    .main-content.full-width #environments,
    .main-content.full-width #teams {
        padding: 12px 16px;
    }
}

/* ================== IMPROVED SECTION LAYOUTS ================== */

/* Better spacing for full-width sections */
.main-content.full-width .collections-container,
.main-content.full-width .environments-container,
.main-content.full-width .teams-container {
    max-width: 1400px; /* Prevent content from being too wide */
    margin: 0 auto;
}

/* Collections grid improvements for full width */
.main-content.full-width .collections-container {
    grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
    gap: 24px;
}

/* Environments grid improvements for full width */
.main-content.full-width .environments-container {
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: 24px;
}

/* Teams grid improvements for full width */
.main-content.full-width .teams-grid {
    grid-template-columns: repeat(auto-fill, minmax(400px, 1fr));
    gap: 24px;
}
/* Sidebar */
.sidebar {
  width: 240px;
  background-color: var(--bg-secondary);
  border-right: 1px solid var(--border-color);
  flex-shrink: 0;
  overflow-y: auto;
}

.nav-menu {
  padding: var(--spacing-md);
}

.nav-item {
  display: flex;
  align-items: center;
  gap: var(--spacing-md);
  width: 100%;
  padding: var(--spacing-md);
  border: none;
  background: none;
  border-radius: var(--radius-md);
  cursor: pointer;
  transition: all var(--transition-fast);
  color: var(--text-secondary);
  margin-bottom: var(--spacing-sm);
  text-align: left;
  font-size: 0.9rem;
}

.nav-item:hover {
  background-color: var(--bg-tertiary);
  color: var(--text-primary);
}

.nav-item.active {
  background-color: var(--primary-color);
  color: var(--text-inverse);
}

.nav-icon {
  font-size: 1.1rem;
  min-width: 20px;
}

/* Content area */
.content-area {
  flex: 1;
  overflow-y: auto;
  padding: var(--spacing-lg);
}

.content-section {
  display: none;
}

.content-section.active {
  display: block;
}

/* Section headers */
.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: var(--spacing-lg);
  flex-wrap: wrap;
  gap: var(--spacing-md);
}

.section-header h2 {
  font-size: 1.5rem;
  font-weight: 600;
  color: var(--text-primary);
}

.section-actions {
  display: flex;
  align-items: center;
  gap: var(--spacing-sm);
  flex-wrap: wrap;
}

/* Buttons */
.btn {
  display: inline-flex;
  align-items: center;
  gap: var(--spacing-sm);
  padding: var(--spacing-sm) var(--spacing-md);
  border: 1px solid var(--border-color);
  border-radius: var(--radius-md);
  background-color: var(--bg-primary);
  color: var(--text-primary);
  text-decoration: none;
  cursor: pointer;
  font-size: 0.875rem;
  font-weight: 500;
  transition: all var(--transition-fast);
  user-select: none;
}

.btn:hover {
  background-color: var(--bg-tertiary);
  border-color: var(--border-hover);
}

.btn-primary {
  background-color: var(--primary-color);
  color: var(--text-inverse);
  border-color: var(--primary-color);
}

.btn-primary:hover {
  background-color: var(--primary-hover);
  border-color: var(--primary-hover);
}

.btn-secondary {
  background-color: var(--bg-secondary);
}

.btn-secondary:hover {
  background-color: var(--bg-tertiary);
}

.btn-danger {
  background-color: var(--error-color);
  color: var(--text-inverse);
  border-color: var(--error-color);
}

.btn-danger:hover {
  background-color: #b91c1c;
  border-color: #b91c1c;
}

.btn-sm {
  padding: var(--spacing-xs) var(--spacing-sm);
  font-size: 0.75rem;
}

.btn-edit {
  background-color: var(--info-color);
  color: var(--text-inverse);
  border-color: var(--info-color);
}

.btn-edit:hover {
  background-color: #1d4ed8;
  border-color: #1d4ed8;
}

.btn-delete {
  background-color: var(--error-color);
  color: var(--text-inverse);
  border-color: var(--error-color);
  padding: var(--spacing-xs) var(--spacing-sm);
  font-size: 0.75rem;
}

.btn-delete:hover {
  background-color: #b91c1c;
  border-color: #b91c1c;
}

.btn-add {
  background-color: var(--success-color);
  color: var(--text-inverse);
  border-color: var(--success-color);
  padding: var(--spacing-xs) var(--spacing-sm);
  font-size: 0.75rem;
}

.btn-add:hover {
  background-color: #047857;
  border-color: #047857;
}

.action-btn {
  background-color: var(--primary-color);
  color: var(--text-inverse);
  border: none;
  padding: var(--spacing-sm) var(--spacing-md);
  border-radius: var(--radius-md);
  cursor: pointer;
  font-size: 0.875rem;
  font-weight: 500;
  transition: all var(--transition-fast);
}

.action-btn:hover {
  background-color: var(--primary-hover);
}

/* Workspace */
.workspace-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: var(--spacing-lg);
  flex-wrap: wrap;
  gap: var(--spacing-md);
}

.workspace-actions {
  display: flex;
  align-items: center;
  gap: var(--spacing-sm);
}

/* Request builder */
.request-builder {
  background-color: var(--bg-secondary);
  border: 1px solid var(--border-color);
  border-radius: var(--radius-lg);
  padding: var(--spacing-lg);
  margin-bottom: var(--spacing-lg);
}

.request-line {
  display: flex;
  gap: var(--spacing-sm);
  margin-bottom: var(--spacing-lg);
  align-items: stretch;
}

.method-select {
  width: 120px;
  padding: var(--spacing-sm) var(--spacing-md);
  border: 1px solid var(--border-color);
  border-radius: var(--radius-md);
  background-color: var(--bg-primary);
  color: var(--text-primary);
  font-size: 0.875rem;
  font-weight: 600;
}

.url-input {
  flex: 1;
  padding: var(--spacing-sm) var(--spacing-md);
  border: 1px solid var(--border-color);
  border-radius: var(--radius-md);
  background-color: var(--bg-primary);
  color: var(--text-primary);
  font-size: 0.875rem;
}

.url-input:focus {
  outline: none;
  border-color: var(--border-focus);
  box-shadow: 0 0 0 3px rgba(14, 165, 233, 0.1);
}

.url-input.valid {
  border-color: var(--success-color);
}

.url-input.invalid {
  border-color: var(--error-color);
}

.send-button {
  background-color: var(--primary-color);
  color: var(--text-inverse);
  border: none;
  padding: var(--spacing-sm) var(--spacing-xl);
  border-radius: var(--radius-md);
  cursor: pointer;
  font-size: 0.875rem;
  font-weight: 600;
  transition: all var(--transition-fast);
  min-width: 120px;
}

.send-button:hover {
  background-color: var(--primary-hover);
}

.send-button:disabled {
  background-color: var(--text-tertiary);
  cursor: not-allowed;
}

/* Request tabs */
.request-tabs {
  display: flex;
  gap: var(--spacing-xs);
  margin-bottom: var(--spacing-lg);
  border-bottom: 1px solid var(--border-color);
}

.tab-btn {
  padding: var(--spacing-sm) var(--spacing-md);
  border: none;
  background: none;
  cursor: pointer;
  color: var(--text-secondary);
  font-size: 0.875rem;
  border-bottom: 2px solid transparent;
  transition: all var(--transition-fast);
}

.tab-btn:hover {
  color: var(--text-primary);
  background-color: var(--bg-tertiary);
}

.tab-btn.active {
  color: var(--primary-color);
  border-bottom-color: var(--primary-color);
}

/* Tab content */
.tab-content {
  min-height: 200px;
}

.tab-pane {
  display: none;
}

.tab-pane.active {
  display: block;
}


 * PosterBoy UI Improvements
 * - Remove custom scrollbars
 * - Better request/response layout
 * - Less congestion, more breathing room
 */

/* ============================================
   1. SCROLLBAR FIX - Use Browser Default
   ============================================ */

::-webkit-scrollbar {
  width: 6px;
  height: 6px;
}

::-webkit-scrollbar-track {
  background: transparent;
}

::-webkit-scrollbar-thumb {
  background: rgba(255, 255, 255, 0.1);
  border-radius: 3px;
}

::-webkit-scrollbar-thumb:hover {
  background: rgba(255, 255, 255, 0.2);
}

/* Firefox */
* {
  scrollbar-width: thin;
  scrollbar-color: rgba(255, 255, 255, 0.1) transparent;
}

/* ============================================
   2. WORKSPACE LAYOUT - Split View
   ============================================ */

/* Make workspace use flexbox for better control */
.workspace-container {
  display: flex;
  flex-direction: column;
  height: calc(100vh - 56px); /* Adjust based on header height */
  overflow: hidden;
}

/* Request Builder - Fixed Height */
.request-builder {
  flex: 0 0 auto;
  max-height: 45vh; /* Takes up 45% of viewport height */
  overflow-y: auto;
  padding: 20px;
  background: #1e293b;
  border-radius: 12px;
  margin-bottom: 16px;
}

/* Response Section - Takes remaining space */
.response-section {
  flex: 1;
  min-height: 0; /* Important for flexbox scrolling */
  overflow-y: auto;
  padding: 20px;
  background: #1e293b;
  border-radius: 12px;
}

/* When no response, hide the section */
.response-section:empty::after {
  content: 'Send a request to see the response here';
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
  color: #64748b;
  font-size: 14px;
}

/* ============================================
   3. REDUCE CONGESTION - Better Spacing
   ============================================ */

/* More breathing room in request builder */
.request-controls-row {
  margin-bottom: 20px;
  padding-bottom: 16px;
}

.request-line {
  margin-bottom: 16px;
  gap: 12px;
}

/* Tab content spacing */
.tab-content {
  padding: 16px 0;
  min-height: auto; /* Remove fixed min-height */
}

/* Parameters table - less cramped */
.key-value-table {
  margin-top: 12px;
}

.key-value-table td {
  padding: 10px 12px;
}

.key-value-table input {
  padding: 8px 12px;
  font-size: 13px;
}

/* ============================================
   4. REQUEST TABS - Cleaner Look
   ============================================ */

.request-tabs {
  gap: 8px;
  margin-bottom: 16px;
  border-bottom: 2px solid rgba(255, 255, 255, 0.05);
}

.tab-btn {
  padding: 10px 20px;
  font-size: 13px;
}

/* ============================================
   5. RESPONSE HEADER - More Compact
   ============================================ */

.response-header {
  padding: 12px 0;
  margin-bottom: 16px;
  border-bottom: 1px solid rgba(255, 255, 255, 0.05);
}

.response-header h3 {
  font-size: 16px;
  font-weight: 600;
  margin: 0;
}

/* ============================================
   6. ALTERNATIVE LAYOUT - Collapsible Request
   ============================================ */

/* Add this class to request-builder when you want it collapsible */
.request-builder.collapsed {
  max-height: 60px;
  overflow: hidden;
}

.request-builder.collapsed .request-controls-row {
  margin-bottom: 0;
  padding-bottom: 0;
  border: none;
}

.request-builder.collapsed .request-line,
.request-builder.collapsed .request-tabs,
.request-builder.collapsed .tab-content {
  display: none;
}

/* Toggle button for collapsing */
.collapse-toggle {
  position: absolute;
  top: 16px;
  right: 16px;
  background: rgba(255, 255, 255, 0.05);
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: 6px;
  padding: 6px 12px;
  font-size: 12px;
  color: #94a3b8;
  cursor: pointer;
  transition: all 0.2s;
}

.collapse-toggle:hover {
  background: rgba(255, 255, 255, 0.1);
  color: #e2e8f0;
}

/* ============================================
   7. SIDE-BY-SIDE LAYOUT (Alternative)
   ============================================ */

/* Add .split-view class to workspace-container for horizontal split */
.workspace-container.split-view {
  flex-direction: row;
  gap: 16px;
}

.workspace-container.split-view .request-builder {
  flex: 0 0 50%;
  max-height: none;
  height: 100%;
}

.workspace-container.split-view .response-section {
  flex: 0 0 50%;
  height: 100%;
}

